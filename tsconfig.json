{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	  "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "**/*.ts"
, "src/settings/CopilotPluginSettingTab.tsx"  ],
  "exclude": [
    "node_modules",
    "copilot/**/*",
  ]
}
